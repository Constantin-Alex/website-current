---
interface Props {
  image: string;
  image_alt: string;
  title: string;
  subtitle?: string;
  description: string;
}

const {image, image_alt, title, subtitle, description} = Astro.props;
---

<div class="card">
  <img src={image} alt={image_alt} class="card-image">
  <div class="text-content">
    <!-- <div class="mask-image"></div> -->
    <h4 class="subtitle">{subtitle}</h4>
    <h3 class="title">{title}</h3>
    <p class="description">{description}</p>
  </div>
</div>

<style>
.card {
  position: relative;
  aspect-ratio: 2/3;
  min-width: 300px;
  border-radius: 20px;
  overflow: hidden;
}

.card-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.mask-image {
  position: absolute;
  width: 100%;
  height: 100%;
  background: var(--text);
  opacity: 0.5;
}

.text-content {
  position: absolute;
  z-index: 10;
  color: var(--background);
  background-color: rgba(0,0,0, 0.5);
  bottom: 0;
  padding-inline: 1vw;
  transition: all 0.3s ease-in-out;
  min-height: 175px;
  max-height: calc(100%-4vh);
  display: flex;
  flex-flow: column;
  justify-content: start;
  padding-block: 2vh;
  transform: translateY(2vh);
  width: calc(100% - 2vw);
}

.subtitle {
  color: var(--background-alt);
}

.description {
  opacity: 0;
  transition: all 0.3s ease-in-out;
}

.card:hover > .text-content {
  height: calc(100%-4vh);
  transform: translateY(0);
}

.card:hover > .text-content > .description {
  opacity: 1;
}

</style>

