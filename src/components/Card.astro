---
import { Icon } from 'astro-icon/components';
import Section from './Section.astro';

interface Props {
  image: string;
  image_type?: "image" | "icon";
  title: string;
  description: string;
};

const {image, image_type = "image", title, description} = Astro.props;

---

<div class="section">
  <Section>
    <div class="content">
      {image_type === "image" && <img src={image} alt="image" class="image"/>}
      {image_type === "icon" && <Icon name={image} class="icon"/>}
      <h3 class="title">{title}</h3>
      <p class="description">{description}</p>
    </div>
  </Section>
</div>

<style>
.section {
  border-radius: 10px;
  overflow: hidden;
  background-color: var(--background-alt);
  width: 300px;  
  height: 400px;
}

.content {
  text-align: center;
}

.icon {
  font-size: 10em;
  height: 200px;
}

.image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}
</style>
