---
import Section from './Section.astro';

interface Props {
title: string;
subtitle?: string;
image: string;
}

const {title, subtitle, image} = Astro.props;
---

<div class="hero">
  <Section>
  <div class="content">
    <h1 class="title">{title}</h1>
    <h3 class="subtitle">{subtitle}</h3>
  </div>
  <img src={image} alt="" class="image">
  </Section>
</div>

<style>
.hero {
  position: relative;
  height: 90vh;
  width: 100%;
  /* padding-inline: 5vw; */
  background-color: var(--primary);
}

.content {
  position: absolute;
  top: 0;
  left: 0;

  width: 70%;
  height: 100%;

  display: flex;
  flex-flow: column;
  justify-content: center;
  gap: 0;

  z-index: 1;
}

.content > * {
  text-align: left;
  padding-left: 10vw;
  margin: 0;
}

.content > .title {
  font-size: 5em;
  color: var(--background);
}

.content > .subtitle {
  font-size: 1.5em;
  color: var(--accent);
}

.image {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  mask: linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,1));
}

@media screen and (max-width: 1150px) {
  .content {
    width: calc(100% - 10vw);
    padding-right: 5vw;
  }
}
</style>
