---
import Section from './Section.astro';

interface Props {
  image: string;
  image_alt: string;
  title: string;
  subtitle?: string;
}

const {image, image_alt, title, subtitle} = Astro.props;
---

<div class="hero">
  <img src={image} alt={image_alt} class="hero-img">
  <div class="hero-mask"></div>
  <Section>
    <div class="hero-content">
      <h1 class="title">{title}</h1>

      {subtitle && <h3 class="subtitle">{subtitle}</h3>}
    </div>
  </Section>
</div>

<style>
.hero {
  position: relative;
  height: 90vh;
  width: 100%;
  overflow: hidden;
}

.hero-img {
  position: absolute;
  object-fit: cover;
  width: 100%;
  height: 100%;
}

.hero-mask {
  top: 0;
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0, 0.25);
  z-index: 5;
}

.hero-content {
  z-index: 10;
  position: absolute;
  width: calc(100% - 10vw);
  height: calc(100% - 6vh);
  display: flex;
  flex-flow: column;
  justify-content: end;
  color: var(--background);
  padding-block: 3vh;
  text-align: left;
}

</style>
