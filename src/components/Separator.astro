---
interface Props {
  vertical?: boolean;
  alt?: boolean;
}

const { vertical, alt } = Astro.props;
---
<div class={`separator ${vertical ? 'vertical' : 'horizontal'} ${alt ? 'background-alt' : ''}`}></div>

<style>
.separator {
  background-color: var(--primary);
}

.horizontal {
  height: 1px;
  width: 100%;
  mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,1) 30%, rgba(0,0,0,1) 70%, transparent 100%);
}

.vertical {
  width: 1px;
  height: 100%;
  mask-image: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,1) 30%, rgba(0,0,0,1) 70%, transparent 100%);
}

.background-alt {
  background-color: #DDDDDD;
}
</style>
