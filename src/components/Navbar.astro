---
import Section from "./Section.astro";
---

<navbar class="navbar">
  <Section>
    <div class="content">
      <div class="left">
        <a href="/website-current"
          ><img
            src={"/website-current/images/logos/Logo.png"}
            alt="Logo"
            style={{ height: "50px" }}
          /></a
        >
      </div>
      <div class="right">
        <a href="/website-current" class="link">Home</a>
        <a href="/website-current/about" class="link">About</a>
        <a href="/website-current/product" class="link">Product</a>
        <a href="/website-current/careers" class="link">Careers</a>
        <a href="/website-current/news" class="link">News</a>
        <a href="/website-current/contact" class="link">Contact</a>
        <a href="/website-current/faq" class="link">FAQ</a>
      </div>
    </div>
    <span class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </span>
  </Section>
</navbar>

<style>
  .navbar {
    position: fixed;
    top: 0;
    background-color: var(--background);
    height: 75px;
    width: 100%;
    box-shadow:
      0px 2.8px 2.2px rgba(0, 0, 0, 0.02),
      0px 6.7px 5.3px rgba(0, 0, 0, 0.028),
      0px 12.5px 10px rgba(0, 0, 0, 0.035),
      0px 22.3px 17.9px rgba(0, 0, 0, 0.042),
      0px 41.8px 33.4px rgba(0, 0, 0, 0.05),
      0px 100px 80px rgba(0, 0, 0, 0.07);

    z-index: 100;
  }

  .content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .left {
    display: flex;
    height: 75px;
    align-items: center;
  }

  .right {
    display: flex;
    gap: 1vw;
    font-size: 1.5em;
  }

  .link {
    transition: all 0.2s linear;
    text-decoration: none;
    color: var(--text);
    position: relative;
  }

  .link::after {
    border-radius: 2px;
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background-color: var(--primary);
    transition: width 0.3s ease-in-out;
  }

  .link:hover::after {
    width: 100%;
  }

  .hamburger {
    width: 0;
    height: 0;
    cursor: pointer;
  }

  @media screen and (max-width: 900px) {
    .right {
      background-color: var(--background);
      position: absolute;
      flex-flow: column;
      justify-content: space-between;
      align-items: center;
      height: calc(100vh - 75px - 8vh);
      width: 50%;
      top: 75px;
      right: 0;
      padding-block: 4vh;
      box-shadow:
        0px 2.8px 2.2px rgba(0, 0, 0, 0.02),
        0px 6.7px 5.3px rgba(0, 0, 0, 0.028),
        0px 12.5px 10px rgba(0, 0, 0, 0.035),
        0px 22.3px 17.9px rgba(0, 0, 0, 0.042),
        0px 41.8px 33.4px rgba(0, 0, 0, 0.05),
        0px 100px 80px rgba(0, 0, 0, 0.07);

      transform: translateX(100%);
      transition: all 0.5s ease-in-out;
    }

    .link {
      width: 50%;
      text-align: center;
      padding-block: 0.5em;
    }

    .hamburger {
      display: block;
      z-index: 10;
      width: 50px;
      height: 50px;
      position: absolute;
      right: 50px;
      top: 15px;
    }

    .hamburger > .line {
      display: block;
      height: 5px;
      width: 100%;
      background-color: var(--text);
      margin-top: 5px;
      transition: all 0.5s ease-in-out;
    }

    .active {
      margin-top: 5px;
    }

    .active > .line {
      margin-top: 0;
    }

    .active > .line:nth-child(1) {
      transform: translateY(5px) rotate(405deg);
    }

    .active > .line:nth-child(2) {
      opacity: 0;
    }

    .active > .line:nth-child(3) {
      transform: translateY(-5px) rotate(-405deg);
    }

    .active-menu {
      transform: translateX(0);
    }
  }
</style>

<script>
  const hamburger = document.querySelector(".hamburger");
  const menu = document.querySelector(".right");

  hamburger?.addEventListener("click", () => {
    hamburger.classList.toggle("active");
    menu?.classList.toggle("active-menu");
  });
</script>
